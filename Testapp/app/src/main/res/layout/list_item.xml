<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="user name"
        android:id="@+id/list_item_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/list_item_btn"
        android:layout_alignEnd="@+id/list_item_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is row number 15"
        android:id="@+id/list_item_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_item_name"
        android:layout_alignRight="@+id/list_item_btn"
        android:layout_alignEnd="@+id/list_item_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Comment"
        android:id="@+id/list_item_btn"
        android:layout_below="@+id/list_item_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/list_item_edit"
        android:textIsSelectable="true"
        android:editable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignBottom="@+id/list_item_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/list_item_btn"
        android:layout_toStartOf="@+id/list_item_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Comments"
        android:id="@+id/button5"
        android:layout_below="@+id/list_item_edit"
        android:layout_toLeftOf="@+id/list_item_btn"
        android:layout_toStartOf="@+id/list_item_btn" />

</RelativeLayout>